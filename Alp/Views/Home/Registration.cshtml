@{
    ViewBag.Title = "Registration Information";
}

<div class="registration-container">
    <br />

    <div class="container">
        <div class="row">
            <div class="span12">
                <h2>Register Online </h2>
            </div>
        </div>
        <div class="row">
            <div class="span3"></div>
            <div class="span6">
                <p class="indent">
                </p>
                <p class="indent">
                </p>
            </div>
            <div class="span3"></div>
        </div>
    </div>

    <br />
    <div class="line-break"></div>
    <br />

    <div class="container">
        <form class="registration-validate">

            <div class="row">
                <div class="span1"></div>
                <div class="span10">
                    <h4>Registration Form</h4>
                    <br />
                </div>
                <div class="span1"></div>
            </div>

            <div class="row">
                <div class="span1"></div>
                <div class="span6">
                    <input id="FullChildName" type="text" class="child-name-line input-xxlarge" placeholder="Name of Child" maxlength="350" required />
                </div>

                <div class="span3">
                    <p>
                        <input id="DOB" type="text" class="dob-line" placeholder="Date of Birth (MM/DD/YYYY)" maxlength="50" required />
                    </p>
                </div>
                <div class="span2"></div>
            </div>

            <div class="row">
                <div class="span1"></div>
                <div class="span6">
                    <p>
                        <input id="Address" type="text" class="address-line input-xxlarge" placeholder="Address" maxlength="500" required />
                    </p>
                </div>
                <div class="span3">
                    <p>
                        <input id="City" type="text" class="city-line" placeholder="City" maxlength="75" required />
                    </p>
                </div>

                <div class="span1"></div>
            </div>

            <div class="row">
                <div class="span1"></div>
                <div class="span3">
                    <p>
                        <input id="Zip" type="text" class="zip-line" placeholder="Zip Code" maxlength="9" required />
                    </p>
                </div>
                <div class="span3">
                    <p>
                        <input id="AgeChild" type="text" class="age-line input-large" placeholder="Age on September 30, 2013" maxlength="2" required />
                    </p>
                </div>
                <div class="span3">
                    <div class="btn-group" style="width: 100%" data-toggle="buttons-radio">
                        <p>
                            <button type="button" style="width: 41%" class="btn">Male</button>
                            <button type="button" style="width: 41%" class="btn">Female</button>
                        </p>
                    </div>
                </div>
                <div class="span1">
                </div>
            </div>

            <div class="row">
                <div class="span1"></div>
                <div class="span6">
                    <p>
                        <input id="Guardians" type="text" class="guardians-line input-xxlarge" placeholder="Name(s) of Parents or Guardians" maxlength="500" required />
                    </p>
                </div>
                <div class="span2">
                    <p>
                        <input id="Telephone" type="text" class="phone-line input-large" placeholder="Telephone Number" maxlength="500" required />
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="span1"></div>
                <div class="span3">
                    <p>
                        <input id="Email" type="text" class="email-line input-large" placeholder="Email" maxlength="500" required />
                    </p>
                </div>
                <div class="span3">
                    Number of Days per Week:
                    <div class="btn-group" style="width: 100%" data-toggle="buttons-radio">
                        <p>
                            <button type="button" style="width: 20%" class="btn">2</button>
                            <button type="button" style="width: 20%" class="btn">3</button>
                            <button type="button" style="width: 20%" class="btn">4</button>
                            <button type="button" style="width: 20%" class="btn">5</button>
                        </p>
                    </div>
                </div>
                <div class="span3">
                    Interested in Extended Care?
                    <div class="btn-group" style="width: 100%" data-toggle="buttons-radio">
                        <p>
                            <button type="button" style="width: 41%" class="btn">Yes</button>
                            <button type="button" style="width: 41%" class="btn">No</button>
                        </p>
                    </div>
                </div>
                <div class="span1"></div>
                <div class="span1"></div>
            </div>

            <div class="row">
                <div class="span1"></div>
                <div class="span10">
                    <input id="DayesTimes" style="width:83.25%" type="text" class="extended-care-line input-xxlarge" placeholder="If Yes, please list Days & Times" maxlength="500" required />
                </div>
                <div class="span1"></div>
            </div>
            <div class="row">
                <div class="span1"></div>
                <div class="span1"><input id="RegSend" type="button" value="Send" class="btn" /></div>
            </div>
            
        </form>
    </div>
</div>
